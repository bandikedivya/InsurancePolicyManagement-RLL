@model List<DAL.AppliedPolicy>
<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa; /* Light gray background color */
            color: #333; /* Dark text color */
            margin: 20px;
        }

        h2 {
            color: #007bff; /* Blue color for the heading */
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 12px;
            text-align: left;
        }

        th {
            background-color: #007bff; /* Blue background color for the header */
            color: #fff; /* White text color */
        }

        tbody tr:hover {
            background-color: #f5f5f5; /* Light gray background color on hover */
        }
    </style>
</head>
<body>
    <h2>List of Applied Policies</h2>

    <table>
        <tr>
            <th>Applied Policy ID</th>
            <th>Policy Number</th>
            <th>Applied Date</th>
            <th>Category</th>
            <th>Customer ID</th>
            <th>Status</th>
        </tr>
        @foreach (var appliedPolicy in Model)
        {
            <tr>
                <td>@appliedPolicy.AppliedPolicyId</td>
                <td>@appliedPolicy.PolicyNumber</td>
                <td>@appliedPolicy.AppliedDate.ToShortDateString()</td>
                <td>@appliedPolicy.Category</td>
                <td>@appliedPolicy.CustomerId</td>
                <td>@appliedPolicy.StatusCode</td>
            </tr>
        }
    </table>
</body>
</html>